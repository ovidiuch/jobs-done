{
  "parser": "babel-eslint",
  "extends": [
    "eslint:recommended",
    "plugin:import/errors",
    "plugin:import/warnings",
    "plugin:react/recommended"
  ],
  "settings": {
    "import/resolver": {
      "babel-module": {}
    }
  },
  "env": {
    "shared-node-browser": true
  },
  "globals": {
    "global": true
  },
  "overrides": [
    {
      "files": ["**/*.fixture.js", "**/__fixtures__/**/*.js"],
      "rules": {
        "no-console": "off"
      }
    },
    {
      "files": [
        "cosmos.config.js",
        "next.config.js",
        "webpack.extend.js",
        "rn-cli.config.js",
        "App.js"
      ],
      "env": {
        "node": true
      }
    }
  ]
}
